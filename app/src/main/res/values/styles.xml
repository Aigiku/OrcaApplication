<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="MyEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_field_design</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:digits">0123456789.</item>
    </style>

    <style name="MyEditTextStyleDone" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_field_design</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:digits">0123456789.</item>
    </style>

    <style name="btn_style" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_design</item>
    </style>


</resources>